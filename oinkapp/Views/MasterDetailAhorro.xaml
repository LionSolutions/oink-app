<?xml version="1.0" encoding="UTF-8"?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms" 
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
                  xmlns:views="clr-namespace:oinkapp.Views"
                  x:Class="oinkapp.Views.MasterDetailAhorro">
    <MasterDetailPage.Master>
        <ContentPage Title="Menú">
            <StackLayout BackgroundColor="Silver" Padding="20">
                <Button Text="Mi alcancía"
                        Command="{Binding OnNavigateCommand}"
                        CommandParameter="NavigationPage/ListaAhorro"/>
                <Button Text="Mis Compras"
                        Command="{Binding OnNavigateCommand}"
                        CommandParameter="NavigationPage/MisCompras"/>
                <Button Text="Donde comprar"
                        Command="{Binding OnNavigateCommand}"
                        CommandParameter="NavigationPage/EnlacesAhorro"/>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>
